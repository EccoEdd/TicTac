    <Button
        android:backgroundTint="#FFC433"
        android:id="@+id/btn7"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:textSize="60sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btn4"
        app:layout_constraintLeft_toLeftOf="@+id/btn4"/>

    <Button
        android:backgroundTint="#FF5733"
        android:id="@+id/btn8"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:textSize="60sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btn5"
        app:layout_constraintLeft_toLeftOf="@+id/btn5"/>

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="179dp"
        tools:layout_editor_absoluteY="608dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="50sp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/btn7"
        app:layout_constraintLeft_toLeftOf="@id/btn6"
